.AccountPage
  .AccountPage__sessionLogo
    = link_to root_path do
      = image_tag asset_path("logo.png"), size: "185x49"
  .AccountPage__sessionBox 
    .AccountPage__sessionBox__no-account
      アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_user_registration_path,  class: "AccountPage__sessionBox__no-account--link"
    .AccountPage__sessionBox__sns
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "AccountPage__sessionBox__sns__google" do
        = image_tag asset_path("medium.jpg"), size: "28x28"
        Googleでログイン
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: "AccountPage__sessionBox__sns__facebook" do
        %i.fab.fa-facebook-square Facebookでログイン
    .AccountPage__sessionBox__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "AccountPage__sessionBox__form__input"
        = f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "AccountPage__sessionBox__form__input"
        -# - if devise_mapping.rememberable?
        -#   .field
        -#     = f.check_box :remember_me
        -#     = f.label :remember_me
        = f.submit "ログイン", class: "AccountPage__sessionBox__form__login"      
        = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "AccountPage__sessionBox__form__new-password"

.LoginBlank