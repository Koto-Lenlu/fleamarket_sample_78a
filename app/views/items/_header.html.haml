%header
  .main
    = link_to new_item_path do
      .exhibition
        .exhibition__button
          出品する
          .icon
            = image_tag asset_path("icon_camera.png"), size: "54x54"
    = link_to root_path do
      = image_tag asset_path("logo.png"), class: "main__img", size: "140x40"
    .main__input
      キーワードから探す 
    = image_tag asset_path("icon-search 1.png"), class: "main__button", size: "40x40"   
  .contents
    .contents__left
      .category
        カテゴリー
      .brand
        ブランド
    .contents__right
      - if user_signed_in?
        .login
          = link_to "マイページ", mypages_path
        .register
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      -else
        .login
          = link_to "ログイン", new_user_session_path
        .register
          = link_to "新規会員登録", new_user_registration_path